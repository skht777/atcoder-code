<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="root" prefHeight="600.0" prefWidth="400.0"
	xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.skht777.atcoder.BoxController">
	<top>
		<GridPane prefHeight="175.0">
			<columnConstraints>
				<ColumnConstraints halignment="CENTER" hgrow="ALWAYS"
					percentWidth="50.0" />
				<ColumnConstraints halignment="CENTER" hgrow="ALWAYS"
					percentWidth="50.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="ALWAYS" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="ALWAYS" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="ALWAYS" />
			</rowConstraints>
			<children>
				<TextField fx:id="userField" promptText="ユーザIDを入力">
					<font>
						<Font size="16.0" />
					</font>
				</TextField>
				<ComboBox fx:id="problem" onAction="#setSubmission"
					promptText="問題を選択" GridPane.columnIndex="1" />
				<ComboBox fx:id="submission" promptText="投稿を選択"
					GridPane.columnIndex="1" GridPane.rowIndex="1" />
				<ComboBox fx:id="contest" promptText="コンテストを選択"
					GridPane.rowIndex="1" />
				<Button fx:id="problemButton" mnemonicParsing="false"
					onAction="#setProblem" text="問題取得" GridPane.rowIndex="2" />
				<Button fx:id="codeButton" mnemonicParsing="false" onAction="#setCode"
					text="コード取得" GridPane.columnIndex="1" GridPane.rowIndex="2" />
			</children>
		</GridPane>
	</top>
	<bottom>
		<Button fx:id="saveButton" contentDisplay="CENTER"
			graphicTextGap="12.0" mnemonicParsing="false" onAction="#saveCode"
			prefHeight="40.0" prefWidth="100.0" text="保存する" BorderPane.alignment="CENTER">
			<font>
				<Font size="17.0" />
			</font>
		</Button>
	</bottom>
	<center>
		<BorderPane prefHeight="425.0" BorderPane.alignment="CENTER">
			<center>
				<ScrollPane pannable="true" BorderPane.alignment="CENTER">
					<content>
						<TextArea fx:id="postedCode" editable="false" prefHeight="400.0"
							wrapText="true" />
					</content>
				</ScrollPane>
			</center>
			<bottom>
				<Label fx:id="languageLabel" BorderPane.alignment="TOP_LEFT">
					<font>
						<Font size="17.0" />
					</font>
				</Label>
			</bottom>
		</BorderPane>
	</center>
</BorderPane>
